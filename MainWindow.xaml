<Window x:Class="MinsPDFViewer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MinsPDFViewer - Pro (Docnet Engine)" Height="800" Width="1200"
        Focusable="True" KeyDown="Window_KeyDown"> <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#f0f0f0" Padding="10">
            <StackPanel Orientation="Horizontal">
                <Button Name="BtnOpen" Content="📂 열기" Width="80" Click="BtnOpen_Click" Margin="0,0,10,0"/>
                <Button Name="BtnSave" Content="💾 저장" Width="80" Click="BtnSave_Click" Margin="0,0,20,0" Background="#DDDDFF"/>

                <TextBlock Text="도구: " VerticalAlignment="Center" FontWeight="Bold"/>
                <RadioButton Name="RbCursor" Content="기본(커서)" GroupName="Tools" IsChecked="True" Click="Tool_Click" Margin="5,0"/>
                <RadioButton Name="RbHighlight" Content="형광펜" GroupName="Tools" Click="Tool_Click" Margin="5,0"/>
                <RadioButton Name="RbText" Content="텍스트" GroupName="Tools" Click="Tool_Click" Margin="5,0"/>

                <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" Margin="10,0"/>
                
                <TextBox Name="TxtSearch" Width="150" VerticalContentAlignment="Center" Margin="0,0,5,0" KeyDown="TxtSearch_KeyDown"/>
                <Button Name="BtnSearch" Content="🔍 검색" Width="60" Click="BtnSearch_Click"/>
                
                <TextBlock Name="TxtStatus" VerticalAlignment="Center" Margin="20,0,0,0" Foreground="Gray"/>
            </StackPanel>
        </Border>

        <ScrollViewer Grid.Row="1" Background="#505050" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
            <Grid Name="PageContainer" Margin="20" HorizontalAlignment="Center">
                <Image Name="PdfImage" Stretch="None"/>
                
                <Canvas Name="PdfCanvas" Background="Transparent" IsHitTestVisible="True" 
                        MouseDown="PdfCanvas_MouseDown" MouseMove="PdfCanvas_MouseMove" MouseUp="PdfCanvas_MouseUp"/>
            </Grid>
        </ScrollViewer>
    </Grid>
</Window>