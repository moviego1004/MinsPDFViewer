<Window x:Class="MinsPDFViewer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MinsPDFViewer - PDFium Engine (VS Code)" Height="800" Width="1000">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="10" Grid.Row="0">
            <Button Name="BtnOpen" Content="PDF 열기" Width="100" Click="BtnOpen_Click" Margin="0,0,10,0"/>
            <TextBox Name="TxtSearch" Width="200" VerticalContentAlignment="Center" Margin="0,0,10,0" KeyDown="TxtSearch_KeyDown"/>
            <Button Name="BtnSearch" Content="검색 (Enter)" Width="100" Click="BtnSearch_Click"/>
            <TextBlock Name="TxtStatus" VerticalAlignment="Center" Margin="20,0,0,0" Foreground="Gray"/>
        </StackPanel>

        <ScrollViewer Grid.Row="1" Background="Gray" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
            <Grid Name="PageContainer" Margin="20">
                <Image Name="PdfImage" Stretch="None"/>
                
                <Canvas Name="PdfCanvas" Background="Transparent" IsHitTestVisible="True" 
                        MouseDown="PdfCanvas_MouseDown" MouseMove="PdfCanvas_MouseMove" MouseUp="PdfCanvas_MouseUp"/>
            </Grid>
        </ScrollViewer>
    </Grid>
</Window>